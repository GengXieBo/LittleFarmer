<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.lenovo.littlefarmer.PlantDetailActivity">


    <util.GradationScrollView
        android:id="@+id/plant_scroll_view"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/plant_pic_image"
                android:scaleType="fitXY"
                android:background="@mipmap/plant_example"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <View
                android:background="#d3d3d3"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <include layout="@layout/activity_content_plant_detail"/>

        </LinearLayout>

    </util.GradationScrollView>

    <include layout="@layout/activity_detail_bar"/>

</RelativeLayout>
