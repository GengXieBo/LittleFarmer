<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:id="@+id/personal_top_constrain"
    android:clickable="true"
    android:background="@drawable/personal_top_state"
    >

    <ImageView
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:srcCompat="@mipmap/login_image"
        android:id="@+id/head_image"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintHorizontal_bias="0.04" />

    <TextView
        android:text="@string/littleFarmer"
        android:layout_width="100dp"
        android:layout_height="27dp"
        android:id="@+id/name_text"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/head_image"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.060000002" />

    <TextView
        android:text="@string/admin"
        android:layout_width="60dp"
        android:layout_height="27dp"
        android:id="@+id/notify_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/name_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        app:layout_constraintVertical_bias="0.32999998"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/head_image"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.05" />

    <TextView
        android:text="TextView"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:id="@+id/admin_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintHorizontal_bias="0.38"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/notify_text"
        android:layout_marginLeft="8dp" />
</android.support.constraint.ConstraintLayout>
